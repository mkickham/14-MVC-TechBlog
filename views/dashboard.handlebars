<div class="text-center">
    <h1 class="title"> Welcome {{username}}! </h1>
</div>

<div class="row justify-content-md-center">
    <div class="container col-md-1"></div>
    <div class="container col-md-5">
    <h2>Create a New Post</h2>

    <form class="form-horizontal blogForm">
      <div class="form-group">
        <label class="control-label col-sm-2" for="blogTitle">Blog Post Title:</label>
        <div class="col-sm-10">
        <input class="form-control" type="text" id="blogTitle" name="blogTitle" />
        </div>
      </div>
      <div class="form-group">
        <label class="control-label col-sm-2" for="blogContent">Blog Content:</label>
        <div class="col-sm-10">
        <textarea class="form-control" id="blogContent" name="blogContent"></textarea>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
        <button type="submit" class="btn btn-primary">Submit</button>
        </div>
      </div>
    </form>
    </div>

    {{#if blogs.length}}
    <div class="blogList container col-md-5">
        <h2>My Blogs:</h2>

        {{#each blogs as |blog| }}
        <div class="goRight">
            <h2>
                <a href="/blog/{{blog.id}}">{{blog.title}}</a>
                <button class="btn btn-sm btn-danger delButt inlineMe" dataId="{{blog.id}}">Delete</button>
            </h2>
        </div>
        {{/each}}
    </div>
    {{/if}}

</div>

<script src="./js/dashboard.js"></script>